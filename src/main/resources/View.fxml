<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.SeparatorMenuItem?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>

<VBox id="vbox" maxHeight="+Infinity" xmlns="http://javafx.com/javafx/8.0.172-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="SagarKapasi099.ProjectAutodidact.Controller">
    <MenuBar fx:id="menuBar">
        <menus>
            <Menu text="File">
                <items>
                    <MenuItem text="Open Torrent File" />
                    <SeparatorMenuItem />
                    <MenuItem text="Exit" onAction="#exit" />
                </items>
            </Menu>
            <Menu text="Settings">
                <items>
                    <MenuItem text="Set Google Sheet ID" />
                </items>
            </Menu>
            <Menu text="About">
                <items>
                    <MenuItem text="Project Link (GitHub)" />
                </items>
            </Menu>
        </menus>
    </MenuBar>
    <BorderPane maxHeight="+Infinity" VBox.vgrow="ALWAYS">
        <center>
            <ListView prefHeight="200.0" BorderPane.alignment="CENTER" VBox.vgrow="ALWAYS" />
        </center>
    </BorderPane>
</VBox>
